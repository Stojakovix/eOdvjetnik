<Shell x:Class="eOdvjetnik.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:eOdvjetnik"
       xmlns:views="clr-namespace:eOdvjetnik.Views"
       xmlns:sfPopup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
       xmlns:viewmodel="clr-namespace:eOdvjetnik.ViewModel"  
       Shell.FlyoutBehavior="{OnPlatform WinUI=Disabled, MacCatalyst=Disabled, Android=Flyout, iOS=Flyout}"
       Shell.NavBarIsVisible="{OnPlatform WinUI=True, MacCatalyst=True , Android=True, iOS=True}"
       xmlns:resx="clr-namespace:eOdvjetnik.Resources.Strings"
       Shell.PresentationMode="NotAnimated"
       >


    <Shell.BindingContext>
        <viewmodel:AppShellViewModel/>
    </Shell.BindingContext>


    <Shell.TitleView>
        <HorizontalStackLayout  Spacing="-10"   VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
            <HorizontalStackLayout.Margin   >
                <OnPlatform x:TypeArguments="Thickness" Default="0,0,0,0">
                    <On Platform="MacCatalyst" Value="0,0,0,0" />
                </OnPlatform>

            </HorizontalStackLayout.Margin>



            <Button IsVisible="{OnPlatform Android=False , iOS=False , WinUI=True , MacCatalyst=True}" 
                    Grid.Column="0" Text="{x:Static resx:AppResources.Pocetna}" 
                    Command="{Binding MainClickCommand}" 
                    x:Name="PoÄetnaButton"
                    BackgroundColor="Transparent" 
                    FontSize="Default"
                    TextColor="White"
                    
                    BorderWidth="0"                    
                    />

            <Button IsVisible="{OnPlatform Android=False , iOS=False , WinUI=True , MacCatalyst=True}" 
                    Grid.Column="1" Text="{x:Static resx:AppResources.Rocisnik}" 
                    Command="{Binding KalendarClickCommand}" 
                    x:Name="KalendarButton" 
                    BackgroundColor="Transparent" 
                    BorderWidth="0"
                    FontSize="Default"
                    TextColor="White"
                    />

            <Button IsVisible="{OnPlatform Android=False , iOS=False , WinUI=True , MacCatalyst=True}" 
                    Grid.Column="5" Text="{x:Static resx:AppResources.Upisnik}" 
                    Command="{Binding SpisiClickCommand}" 
                    x:Name="SpisiButton"
                    BackgroundColor="Transparent"
                    Margin="10,0" 
                    BorderWidth="0"
                    FontSize="Default"
                    TextColor="White"
                    />

            <Button IsVisible="{OnPlatform Android=False , iOS=False , WinUI=True , MacCatalyst=True}" 
                    Grid.Column="4" Text="{x:Static resx:AppResources.Tarifa}" 
                    Command="{Binding NaplataClickCommand}" 
                    x:Name="NaplataButton"
                    BackgroundColor="Transparent"
                    BorderWidth="0"
                    FontSize="Default"
                    TextColor="White"
                    />

            <Button IsVisible="{OnPlatform Android=False , iOS=False , WinUI=True , MacCatalyst=True}" 
                    Grid.Column="2" Text="{x:Static resx:AppResources.Dokumenti}" 
                    Command="{Binding DokumentiClickCommand}" 
                    x:Name="DokumentiButton"
                    BackgroundColor="Transparent"
                    BorderWidth="0"
                    FontSize="Default"
                    TextColor="White"
                    />

            <Button IsVisible="{OnPlatform Android=False , iOS=False , WinUI=True , MacCatalyst=True}" 
                    Grid.Column="3" Text="{x:Static resx:AppResources.Kontakti}" 
                    Command="{Binding KlijentiClickCommand}" 
                    x:Name="KlijentiButton"
                    BackgroundColor="Transparent"
                    BorderWidth="0"
                    FontSize="Default"
                    TextColor="White"
                    />


            <Button Grid.Column="6" 
                    Text="{x:Static resx:AppResources.KorisnickaPodrska}" 
                    IsVisible="{OnPlatform Android=False , iOS=False , WinUI=True , MacCatalyst=True}"  
                    BackgroundColor="Transparent" 
                    BorderWidth="0" 
                    Command="{Binding OnSupportClickCommand}"
                    FontSize="Default"
                    TextColor="White"
 />

            <Button Grid.Column="9" 
                    Text="{x:Static resx:AppResources.Postavke}" 
                    BackgroundColor="Transparent"
                    IsVisible="{OnPlatform Android=False , iOS=False , WinUI=True , MacCatalyst=True}"  
                    BorderWidth="0"
                    Command="{Binding PostavkeClickCommand}" 
                    FontSize="Default"
                    TextColor="White"
 />


            <sfPopup:SfPopup x:Name="popup" 
                             HeaderTitle="{x:Static resx:AppResources.KorisnickaPodrska}" 
                             IsVisible="{Binding SupportVisible}" 
                             IsOpen="{Binding SupportPopupOpen}"
                             >
                <sfPopup:SfPopup.PopupStyle>
                    <sfPopup:PopupStyle MessageBackground="White" HeaderBackground="White" />
                </sfPopup:SfPopup.PopupStyle>
                    
                    <sfPopup:SfPopup.ContentTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{x:Static resx:AppResources.MainMobBroj}" TextColor="Black" FontSize="16" Margin="20,0,0,10"/>
                            <Label Text="{x:Static resx:AppResources.MainEmail}" TextColor="Black" FontSize="16" Margin="20,0,0,10" />
                            <Label Text="{Binding Version}" TextColor="Black" FontSize="16" Margin="20,0,0,10" />
                        </StackLayout>
                    </DataTemplate>
                </sfPopup:SfPopup.ContentTemplate>
            </sfPopup:SfPopup>

            <sfPopup:SfPopup x:Name="popupIstek" 
                             HeaderTitle="{x:Static resx:AppResources.Obavijest}" 
                             IsVisible="{Binding ExpiryVisible}" 
                             IsOpen="{Binding ExpiryPopupOpen}"
                             ShowCloseButton="True" 

                            >

                <sfPopup:SfPopup.PopupStyle>
                    <sfPopup:PopupStyle MessageBackground="White" HeaderBackground="White" />
                </sfPopup:SfPopup.PopupStyle>
                
                <sfPopup:SfPopup.ContentTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout>
                            <Label Text="{Binding Days_Remaining}" TextColor="Black" FontSize="16" Margin="25,20,0,0" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </sfPopup:SfPopup.ContentTemplate>
            </sfPopup:SfPopup>

          


        </HorizontalStackLayout>
    </Shell.TitleView>

    <ShellContent Title="{x:Static resx:AppResources.Pocetna}" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"  />
    <ShellContent Title="{x:Static resx:AppResources.Rocisnik}" ContentTemplate="{DataTemplate views:Kalendar}" Route="Kalendar" />
    <ShellContent Title="{x:Static resx:AppResources.Upisnik}" ContentTemplate="{DataTemplate views:Spisi}" Route="Spisi" />
    <ShellContent Title="{x:Static resx:AppResources.Kontakti}" ContentTemplate="{DataTemplate views:Klijenti}" Route="Klijenti" />
    <ShellContent Title="{x:Static resx:AppResources.Tarifa}" ContentTemplate="{DataTemplate views:Naplata}" Route="Naplata" />
    <ShellContent Title="{x:Static resx:AppResources.Dokumenti}" ContentTemplate="{DataTemplate views:Dokumenti}" Route="Dokumenti" />
    
    <ShellContent ContentTemplate="{DataTemplate views:LoadingPage}" Route="LoadingPage" />

    <ShellContent Title="{x:Static resx:AppResources.KorisnickaPodrska}" ContentTemplate="{DataTemplate sfPopup:SfPopup}" />
    <ShellContent Title="{x:Static resx:AppResources.Postavke}" ContentTemplate="{DataTemplate views:Postavke}" Route="Postavke" />
    <ShellContent  ContentTemplate="{DataTemplate views:Zaposlenici}" Route="Zaposlenici" />

    <MenuItem Text="{x:Static resx:AppResources.KorisnickaPodrska}"
              Command="{Binding OnSupportClickCommand}"/>
   


</Shell>
