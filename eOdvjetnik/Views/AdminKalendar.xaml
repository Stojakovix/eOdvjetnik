<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eOdvjetnik.Views.AdminKalendar"
             Title="AdminKalendar"
             xmlns:models="clr-namespace:eOdvjetnik.Models"
             xmlns:local="clr-namespace:eOdvjetnik.ViewModel"

>
    <ContentPage.BindingContext>
        <local:KalendarViewModel x:Name="viewmodel"/>
    </ContentPage.BindingContext>

    <ScrollView>
        
        
    <VerticalStackLayout>
            <HorizontalStackLayout>

                <Button HeightRequest="50" Grid.Row="0" HorizontalOptions="Start" WidthRequest="200" Text="Prikaz prema korisniku" Command="{Binding AdminViewByName}" Margin="5,2,10,2">
                    <Button.ImageSource>
                        <FileImageSource File="new_window.png" />
                    </Button.ImageSource>

                </Button>
                <Button HeightRequest="50" Grid.Row="0" HorizontalOptions="Start" WidthRequest="200" Text="Prikaz prema datumu" Command="{Binding AdminViewByDate}"  Margin="5,2,10,2">
                    <Button.ImageSource>
                        <FileImageSource File="new_window.png" />
                    </Button.ImageSource>

                </Button>
                
            </HorizontalStackLayout>


            <ListView ItemsSource="{Binding AdminAppointments}" Margin="20,20,0,0" WidthRequest="1000" HorizontalOptions="Start" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="400"/>

                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Column="0" Text="{Binding StartDateString}" VerticalTextAlignment="Center" HorizontalTextAlignment="End" FontSize="16"  />
                                <Label Grid.Column="1" Text="{Binding StartTimeString}" VerticalTextAlignment="Center" FontSize="16" Margin="10,0,10,0"  />
                                <Label Grid.Column="2" Text="{Binding UserName }" VerticalTextAlignment="Center" FontSize="16" Margin="10,0,10,0" FontAttributes="Bold" />
                                <Label Grid.Column="3" Text="{Binding EventType }" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="16" Background="{Binding Type}" Margin="20,0,10,0"  />
                                <Label Grid.Column="5" Text="{Binding EventName}" VerticalTextAlignment="Center" FontSize="16" Margin="10,0,10,0" />

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>