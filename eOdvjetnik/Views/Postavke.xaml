<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eOdvjetnik.Views.Postavke"
             xmlns:local ="clr-namespace:eOdvjetnik.ViewModel"
             Title="Postavke"
             BackgroundColor="White" >


    <ContentPage.BindingContext>
        <local:PostavkeViewModel x:Name="viewmodel"/>
    </ContentPage.BindingContext>

    <VerticalStackLayout >
        <Grid Margin="10,10,10,10" RowSpacing="5" ColumnSpacing="5">


            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />

            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Grid.Row="0" BorderColor="DarkGray" BorderWidth="1" BackgroundColor="#5ac8fa"  TextColor="Black" Clicked="Button1_Clicked" Text="Uređaj i licenca" FontSize="Default"  />
            <Button Grid.Column="0" Grid.Row="1" BorderColor="DarkGray" BorderWidth="1" BackgroundColor="#5ac8fa"  TextColor="Black" Clicked="Button2_Clicked" Text="Prijavi grešku" FontSize="Default"   />
            <Button Grid.Column="0" Grid.Row="2" BorderColor="DarkGray" BorderWidth="1" BackgroundColor="#5ac8fa"  TextColor="Black" Clicked="Button3_Clicked" Text="Pošalji prijedlog" FontSize="Default"   />
            <Button Grid.Column="0" Grid.Row="3" BorderColor="DarkGray" BorderWidth="1" BackgroundColor="#5ac8fa"  TextColor="Black" Clicked="Button4_Clicked" Text="NAS postavke"  FontSize="Default"  />
            <Button Grid.Column="0" Grid.Row="4" BorderColor="DarkGray" BorderWidth="1" BackgroundColor="#5ac8fa"  TextColor="Black" Clicked="Button5_Clicked" Text="SQL postavke"  FontSize="Default"  />
            <Button Grid.Column="0" Grid.Row="5" BorderColor="DarkGray" BorderWidth="1" BackgroundColor="#5ac8fa"  TextColor="Black" Clicked="Button6_Clicked" Text="Zaposlenici" FontSize="Default"   />
            <Button Grid.Column="0" Grid.Row="6" BorderColor="DarkGray" BorderWidth="1" BackgroundColor="#5ac8fa"  TextColor="Black" Clicked="Button7_Clicked" Text="Stopa PDV-a" FontSize="Default"   />


            <Border MaximumWidthRequest="420" Grid.Column="1" Grid.RowSpan="7" Padding="10,10,10,10"  BackgroundColor="White" 
                    x:Name="Frame1" IsVisible="True" HorizontalOptions="StartAndExpand" VerticalOptions="FillAndExpand">
                <Border.WidthRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android,iOS" Value="225" />
                        <On Platform="UWP,MacCatalyst" Value="420" />
                    </OnPlatform>
                </Border.WidthRequest>

                <StackLayout>
                    <Label TextColor="Black" Text="Vrsta licence:" FontAttributes="Bold" Margin="0,0,0,5" />
                    <Label TextColor="Black" Text="{Binding LicenceType}" Margin="0,0,0,20" />
                    <Label TextColor="Black" Text="Datum isteka licence:" FontAttributes="Bold" Margin="0,0,0,5" />
                    <Label TextColor="Black" Text="{Binding ExpiryDate}" Margin="0,0,0,20" />
                    <Label TextColor="Black" Text="Aktivacijski kod:" FontAttributes="Bold" Margin="0,0,0,5" />
                    <Label TextColor="Black" Text="{Binding Activation_code}" Margin="0,0,0,20" />
                    <Label TextColor="Black" Text="Serijski broj:" FontAttributes="Bold" Margin="0,0,0,5" />
                    <Editor TextColor="Black" Text="{Binding HWID64}" IsReadOnly="True"  />
                </StackLayout>
            </Border>

            <Border MaximumWidthRequest="420" Grid.Column="1" Grid.RowSpan="7" Padding="0,0,0,0"  BackgroundColor="White" 
                    x:Name="Frame2" IsVisible="False" HorizontalOptions="StartAndExpand" VerticalOptions="FillAndExpand">
                <Border.WidthRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android,iOS" Value="225" />
                        <On Platform="UWP,MacCatalyst" Value="420" />
                    </OnPlatform>
                </Border.WidthRequest>
                <ScrollView>
                    <Editor  AutoSize="TextChanges" MaxLength="300" Placeholder="Opišite grešku u aplikaciji koju je potrebno ispraviti" />
                </ScrollView>
            </Border>
            <Border MaximumWidthRequest="420" Grid.Column="1" Grid.RowSpan="7" Padding="0,0,0,0"  BackgroundColor="White" 
                    x:Name="Frame3" IsVisible="False" HorizontalOptions="StartAndExpand" VerticalOptions="FillAndExpand">
                <Border.WidthRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android,iOS" Value="225" />
                        <On Platform="UWP,MacCatalyst" Value="420" />
                    </OnPlatform>
                </Border.WidthRequest>
                <ScrollView>
                    <Editor AutoSize="TextChanges" MaxLength="300" Placeholder="Navedite funkcionalnost koju biste htjeli vidjeti u idućim verzijama aplikacije" />
                </ScrollView>
            </Border>
            <Border MaximumWidthRequest="420" Grid.Column="1" Grid.RowSpan="7"  BackgroundColor="White" 
                    x:Name="Frame4" IsVisible="False" HorizontalOptions="StartAndExpand" VerticalOptions="FillAndExpand">
                <Border.WidthRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android,iOS" Value="225" />
                        <On Platform="UWP,MacCatalyst" Value="420" />
                    </OnPlatform>
                </Border.WidthRequest>
                <StackLayout>
                    <Grid Margin="10,10,10,0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>


                        <Label MinimumWidthRequest="50" Text="IP adresa"  TextColor="Black" LineBreakMode="NoWrap" VerticalOptions="Center" />
                        <Entry Grid.Column="1"  x:Name="IP_Entry" Text="{Binding IPNas}" TextColor="Black"   />

                        <Label Text="Korisničko ime" Grid.Row="1" Grid.Column="0" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Start" LineBreakMode="NoWrap" />
                        <Entry x:Name="USER_Entry" Text="{Binding UserNas}" Grid.Row="1" Grid.Column="1" TextColor="Black" />

                        <Label Text="Lozinka" Grid.Row="2" Grid.Column="0" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Start" LineBreakMode="NoWrap" />
                        <Entry x:Name="PASS_Entry" Text="{Binding PassNas}" Grid.Row="2" Grid.Column="1" TextColor="Black"  />

                        <Label Text="Mapa" Grid.Row="3" Grid.Column="0" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Start" LineBreakMode="NoWrap" />
                        <Entry x:Name="FOLDER_Entry" Text="{Binding Folder}" Grid.Row="3" Grid.Column="1" TextColor="Black" />

                        <Label Text="Podmapa" Grid.Row="4" Grid.Column="0" TextColor="Black"  VerticalOptions="Center" HorizontalOptions="Start" LineBreakMode="NoWrap" />
                        <Entry x:Name="SUBFOLDER_Entry" Text="{Binding SubFolder}" Grid.Row="4" Grid.Column="1" TextColor="Black" VerticalOptions="Center" />

                        <Button Text="Spremi" Command="{Binding SaveCommandNAS}" Grid.Row="5" Grid.Column="1" Margin="0,10,0,10" BackgroundColor="#5ac8fa" TextColor="Black" FontSize="Default"  />

                    </Grid>


                </StackLayout>
            </Border>
            <Border MaximumWidthRequest="420" Grid.Column="1" Grid.RowSpan="7"  BackgroundColor="White" 
                    x:Name="Frame5" IsVisible="False" HorizontalOptions="StartAndExpand" VerticalOptions="FillAndExpand">
                <Border.WidthRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android,iOS" Value="225" />
                        <On Platform="UWP,MacCatalyst" Value="420" />
                    </OnPlatform>
                </Border.WidthRequest>
                <StackLayout>
                    <Grid Margin="10,10,10,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>

                        <Label Text="IP adresa" Grid.Row="0" Grid.Column="0" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Start" LineBreakMode="NoWrap" />
                        <Entry x:Name="IPEntry" Text="{Binding IP}" Grid.Row="0" Grid.Column="1" TextColor="Black"  />

                        <Label Text="Korisničko ime" Grid.Row="1" Grid.Column="0" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Start" LineBreakMode="NoWrap" />
                        <Entry x:Name="USEREntry" Text="{Binding UserName}" Grid.Row="1" Grid.Column="1" TextColor="Black"  />

                        <Label Text="Lozinka" Grid.Row="2" Grid.Column="0" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Start" LineBreakMode="NoWrap" />
                        <Entry x:Name="PASSEntry" Text="{Binding Password}" Grid.Row="2" Grid.Column="1" TextColor="Black" />

                        <Label Text="Baza podataka" Grid.Row="3" Grid.Column="0" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Start" LineBreakMode="NoWrap" />
                        <Entry x:Name="DatabaseEntry" Text="{Binding DatabaseName}" Grid.Row="3" Grid.Column="1" TextColor="Black"   />

                        <Button Text="Spremi" Command="{Binding SQLSaveCommand}" Grid.Row="5" Grid.Column="1" Margin="0,10,0,10" BackgroundColor="#5ac8fa" TextColor="Black" FontSize="Default"   />

                    </Grid>
                </StackLayout>
            </Border>

            <VerticalStackLayout Grid.Column="1" Grid.RowSpan="7"  BackgroundColor="White" 
                    x:Name="Frame6" IsVisible="False" HorizontalOptions="StartAndExpand" >
                <Button Text="Prikaži sve korisnike" Command="{Binding GetAllCompanyDevices}" Margin="0,10,0,10" BackgroundColor="#5ac8fa" TextColor="Black" FontSize="Default"   />

                <ListView Grid.Row="1" ItemsSource="{Binding DataModel.Devices}">
                    <ListView.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="400"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>


                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="Device ID" FontAttributes="Bold"/>
                            <Label Grid.Column="1" Text="Company ID" FontAttributes="Bold" Margin="10,0,0,0"/>
                            <Label Grid.Column="2" Text="Serijski broj (Base64 encoding)" FontAttributes="Bold" Margin="10,0,0,0" />
                            <Label Grid.Column="3" Text="License Active" FontAttributes="Bold" Margin="10,0,0,0" />
                            <Label Grid.Column="4" Text="Device Type ID" FontAttributes="Bold" Margin="10,0,0,0" />
                            <Label Grid.Column="5" Text="Opis" FontAttributes="Bold" Margin="10,0,0,0" />


                        </Grid>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="400"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="200"/>



                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Text="{Binding id}" Margin="10,0,0,0" />
                                    <Label Grid.Column="1" Text="{Binding company_id}" Margin="10,0,0,0"/>
                                    <Label Grid.Column="2" Text="{Binding hwid64}" Margin="10,0,0,0"/>
                                    <Label Grid.Column="3" Text="{Binding licence_active}" Margin="10,0,0,0"/>
                                    <Label Grid.Column="4" Text="{Binding device_type_id}" Margin="10,0,0,0"/>
                                    <Label Grid.Column="5" Text="{Binding opis}" Margin="10,0,0,0"/>


                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </VerticalStackLayout>
        
        
            <Border MaximumWidthRequest="420" Grid.Column="1" Grid.RowSpan="7"  BackgroundColor="White" 
                    x:Name="Frame7" IsVisible="False" HorizontalOptions="StartAndExpand" VerticalOptions="FillAndExpand">
                <Border.WidthRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android,iOS" Value="225" />
                        <On Platform="UWP,MacCatalyst" Value="420" />
                    </OnPlatform>
                </Border.WidthRequest>
                <Label TextColor="Black" Text="PDV placeholder text" Margin="10,10,0,0" />
            </Border>


        </Grid>
    </VerticalStackLayout>



</ContentPage>