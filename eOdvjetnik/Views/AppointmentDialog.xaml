<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             x:Class="eOdvjetnik.Views.AppointmentDialog"
             Title="AppointmentDialog"
             xmlns:models="clr-namespace:eOdvjetnik.Models"
             x:DataType="models:Meeting"
             >

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="10"
                             VerticalOptions="StartAndExpand">
            <Label Text="Name"/>
            <Entry Text="{Binding EventName}"/>
            <Label Text="From"/>
            <TimePicker Format="D" Time="{Binding From, Mode=TwoWay}"/>
            <Label Text="To"/>
            <TimePicker Format="D" Time="{Binding To, Mode=TwoWay}"/>
            
            <Button Text="Save"
                    Clicked="Save_Clicked" />
            


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
