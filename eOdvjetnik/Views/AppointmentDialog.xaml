<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
             xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             x:Class="eOdvjetnik.Views.AppointmentDialog"
             Title="AppointmentDialog"
             xmlns:models="clr-namespace:eOdvjetnik.Models"
             x:DataType="models:Appointment"
             
             >
    <Shell.NavBarIsVisible>False</Shell.NavBarIsVisible>
    <StackLayout  NavigationPage.HasNavigationBar="False">

        <Grid Margin="20,100,0,0" HorizontalOptions="Center" VerticalOptions="Center" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,10"
                  x:Name="eventName_layout"
                  WidthRequest="355"
                  HorizontalOptions="Start"
                  VerticalOptions="Start">
                  <Entry
                   Placeholder="Naziv ročišta"
                  x:Name="eventNameText"
                  TextColor="Gray" />
            </Grid>

            <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,10"
                  x:Name="organizer_layout"
                  WidthRequest="355"
                  HorizontalOptions="Start"
                  VerticalOptions="Start">

                    <Editor  
                        x:Name="organizerText"
                        Placeholder="Dodatne informacije"
                        TextColor="Gray"/>

                
  
        
            </Grid>

            <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="10,0,0,10"
                  x:Name="startTimeLabel_layout"
                  VerticalOptions="Center">
                  <Label
                  FontSize="Small"
                  Text="Početak"
                  TextColor="Gray" />
            </Grid>

            <Grid Grid.Row="3" Margin="0,0,0,10"
                   x:Name="StartdateTimePicker_layout"
                   VerticalOptions="Start">
                     <Grid.ColumnDefinitions>
                         <ColumnDefinition Width="auto" />
                         <ColumnDefinition Width="auto"/>
                     </Grid.ColumnDefinitions>
                          <Grid   Grid.Column="0" 
                                 x:Name="start_datepicker_layout"
                                 VerticalOptions="Start">
                              <DatePicker x:Name="startDate_picker" Format="dd/MM/yyyy" />
                          </Grid>
                
                      <Grid
                      x:Name="start_timepicker_layout" Padding="6,6,0,0"
                          
                      Grid.Column="1"
                      >
                          
                          <TimePicker x:Name="startTime_picker" 
                                      Format="HH:mm"/>
                      </Grid>
            </Grid>
            
            
            
            <Grid Grid.Row="4" Margin="10,0,0,10"
                    x:Name="endTimeLabel_layout"
                    VerticalOptions="Start">
                     <Label
                     FontSize="Small"
                     Text="Završetak"
                     TextColor="Gray" />
             </Grid>

            <Grid Grid.Row="5" Margin="0,0,0,10"
        x:Name="EndDateTimePicker_layout"
        VerticalOptions="Start">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid
            x:Name="end_datepicker_layout"
            Grid.Column="0"
            VerticalOptions="Start">
                <DatePicker
                x:Name="endDate_picker"
                Grid.Column="0"
                VerticalOptions="Start"
                Format="dd/MM/yyyy"/>
            </Grid>
            <Grid
            x:Name="end_timepicker_layout" Padding="6,6,0,0"
            Grid.Column="1"
            VerticalOptions="Start">
                <TimePicker
                x:Name="endTime_picker"
                VerticalOptions="Start"
                Format="HH:mm"
                               
                
                />
            </Grid>
                
                
        </Grid>
            
            
            <Grid Grid.Row="6" Margin="20,0,0,20"
                 x:Name="allDay"
                 VerticalOptions="Start">
                       <Grid.ColumnDefinitions>
                           <ColumnDefinition Width="auto" />
                           <ColumnDefinition Width="*"/>
                       </Grid.ColumnDefinitions>
                       <Label 
                   FontSize="15"  Grid.Column="0"
                   VerticalTextAlignment="Center"
                   Text="Cjelodnevni događaj"
                   TextColor="Gray" />
                       <Grid Grid.Column="1" Padding="20,0,0,0">
                           <Switch x:Name="switchAllDay" HorizontalOptions="Start"  VerticalOptions="Center" BackgroundColor="White" ThumbColor="Gray" />
                       </Grid>
        </Grid>
            
            
            
            <Grid Grid.Row="7"  VerticalOptions="Start" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid
                  Grid.Column="0">
                  <Button
                  x:Name="DeleteButton"
                  Text="Delete"
                  Background="#DC143C"            
                  TextColor="LightGray"
                  WidthRequest="100" />
            </Grid>
            <Grid 
                  Grid.Column="1">
                          <Button
                  x:Name="cancelButton"
                  Text="Cancel"
                  BackgroundColor="Green"
                  TextColor="#3B3B3B"
                  WidthRequest="100" />
            </Grid>
            <Grid
                   Grid.Column="2">
                           <Button
                   x:Name="saveButton"
                   Text="Save"
                   TextColor="White"
                   WidthRequest="100" />
            </Grid>
        </Grid>
        </Grid>
    </StackLayout>
</ContentPage>
