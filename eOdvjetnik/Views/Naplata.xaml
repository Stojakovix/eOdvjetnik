<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sfPopup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             x:Class="eOdvjetnik.Views.Naplata"
             xmlns:viewmodel="clr-namespace:eOdvjetnik.ViewModel"
             Title="Naplata">

    <ContentPage.BindingContext>
        <viewmodel:NaplataViewModel/>
    </ContentPage.BindingContext>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        

        <!-- Header -->

        <VerticalStackLayout Grid.Row="0" >
        <Grid BackgroundColor="LightGray" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="Zastupnik:" FontSize="14"  FontAttributes="Bold" TextColor="Black" Margin="20,10,0,12"/>
            <Label Grid.Column="1" Text="{Binding NazivTvrtke}" FontSize="14" TextColor="Black" Margin="10,10,0,12"/>

            <Label Grid.Column="0" Grid.Row="1" Text="Klijent:" FontSize="14"  FontAttributes="Bold" TextColor="Black" Margin="20,0,0,12"/>
            <Label Grid.Column="1" Grid.Row="1" Text="{Binding NazivKlijenta}" FontSize="14"  TextColor="Black" Margin="10,0,0,12"/>

            <Label Grid.Column="0" Grid.Row="2" Text="Tarifni broj:" FontSize="14"  FontAttributes="Bold" TextColor="Black" Margin="20,0,0,12"/>
            <Label Grid.Column="1" Grid.Row="2" Text="{Binding odabraniTBR}" FontSize="14"  TextColor="Black" Margin="10,0,0,12" />

            <Label Grid.Column="0" Grid.Row="3" Text="Radnja:" FontSize="14"  FontAttributes="Bold" TextColor="Black" Margin="20,0,0,12"/>
            <Label Grid.Column="1" Grid.Row="3" Text="{Binding odabraniNaziv}" FontSize="14" TextColor="Black" Margin="10,0,0,12"  />

            <Label Grid.Column="0" Grid.Row="4" Text="Bodovi:" FontSize="14"  FontAttributes="Bold" TextColor="Black" Margin="20,0,0,12"/>
            <Label Grid.Column="1" Grid.Row="4" Text="{Binding odabraniBodovi}" FontSize="14"  TextColor="Black" Margin="10,0,0,12" />

        </Grid>
        <HorizontalStackLayout>

            <Button 
                BorderColor="DarkGray"
                BorderWidth="1"
                BackgroundColor="#5ac8fa"
                Text="Pregled računa"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalOptions="Start"
                Command="{Binding OnReciptClickCommand}" 
                FontSize="Default"
                Margin="10,10,10,10"/>

            <Button 
                BorderColor="DarkGray"
                BorderWidth="1"
                BackgroundColor="#5ac8fa"
                Text="Dodaj na račun"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalOptions="Start"
                Command="{Binding AddItemCommand}" 
                FontSize="Default"
                Margin="10,10,10,10"/>

                <SearchBar Placeholder="Pretraga po tarifi broju ili nazivu radnje" 
                   BackgroundColor="LightGray"
                           
                   SearchCommand="{Binding SearchCommand}"
                   Text="{Binding SearchText}"
                   WidthRequest="400"
                   HorizontalOptions="Start"
                   Margin="10,10,10,10"
                   FontSize="Default" />

                <Label Margin="10,0,0,10" Text="Nema rezultata pretrage!" FontSize="Default" FontAttributes="Bold" IsVisible="{Binding NoQueryResult}" TextColor="Black" VerticalOptions="Center" />
                <Label Margin="10,0,0,10" Text="Povezivanje nije uspjelo!" FontSize="Default" FontAttributes="Bold" IsVisible="{Binding NoSQLreply}" TextColor="Black" VerticalOptions="Center" />

             
            </HorizontalStackLayout>

       

        <Grid   >
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="TextColor" Value="Black" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="Auto" />

            </Grid.ColumnDefinitions>

                <Label Grid.Column="0" VerticalOptions="Center" FontAttributes="Bold" FontSize="Default" Text="Tbr." Margin="0,0,0,5" HorizontalOptions="Start" Padding="20,0,0,0" />
                <Label Grid.Column="1" VerticalOptions="Center" FontAttributes="Bold" FontSize="Default" Text="Bodovi"   HorizontalOptions="Center" />
                <Label Grid.Column="2" VerticalOptions="Center" FontAttributes="Bold" FontSize="Default" Text="Radnja" Margin="0,0,0,0" />

        </Grid>
        </VerticalStackLayout>

        <!-- Scrollable ListView -->
        <ScrollView Grid.Row="1">
            <ListView Margin="0,0,0,0" ItemsSource="{Binding TariffItems}" ItemSelected="ListViewItemSelected"  >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid BackgroundColor="White">
                                <Grid.Resources>
                                    <Style TargetType="Label">
                                        <Setter Property="TextColor" Value="Black" />
                                    </Style>
                                </Grid.Resources>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label Margin="0,5,0,5" VerticalOptions="Center" Grid.Row="1" Grid.Column="0" FontSize="Default" Text="{Binding oznaka}" HorizontalOptions="Start"  Padding="20,0,0,0" />
                                <Label Margin="0,5,0,5" VerticalOptions="Center" Grid.Row="1" Grid.Column="1" FontSize="Default" Text="{Binding bodovi}" HorizontalOptions="Center" />
                                <Label Margin="0,5,0,5" VerticalOptions="Center" Grid.Row="1" Grid.Column="2" FontSize="Default" Text="{Binding concatenated_name}" WidthRequest="2000" HorizontalOptions="Start" />

                                <BoxView Margin="0,24,0,0" Grid.Row="1" Grid.ColumnSpan="7" BackgroundColor="Red" HeightRequest="1"  />

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </ScrollView>
        
        
    </Grid>

</ContentPage> 





