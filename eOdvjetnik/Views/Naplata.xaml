<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eOdvjetnik.Views.Naplata"
             xmlns:viewmodel="clr-namespace:eOdvjetnik.ViewModel"
             Title="Naplata">

    <ContentPage.BindingContext>
        <viewmodel:NaplataViewModel/>
    </ContentPage.BindingContext>
    
    <ScrollView>
        <VerticalStackLayout >
        <Button 
                BorderColor="DarkGray"
                BorderWidth="1"
                BackgroundColor="#5ac8fa"
                Text="Izradi raÄun"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalOptions="Start"
                Clicked="CreateDocument"
            FontSize="Default"
            Margin="10,10,10,10"
            />

        <Label Text="Pretraga po tarifnom broju ili nazivu" HorizontalOptions="Start" FontSize="Default"  Margin="10,10,10,10"
 />
        <SearchBar Placeholder="Npr. 1.2" 
                   BackgroundColor="LightGray"
                   SearchCommand="{Binding SearchCommand}"
                   Text="{Binding SearchText}"
                   WidthRequest="400"
                   HorizontalOptions="Start"
                   Margin="10,0,10,10"
                   FontSize="Default" />


        <Grid Margin="10"   >
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="TextColor" Value="Black" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="Auto" />

            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" FontAttributes="Bold" Text="Tbr." Margin="5,0,0,0" />
            <Label Grid.Column="1" FontAttributes="Bold" Text="Bodovi"   HorizontalOptions="Center" />
            <Label Grid.Column="2" FontAttributes="Bold" Text="Vrsta" Margin="5,0,0,0" />

        </Grid>

        
        <ListView Margin="10,0,0,0"  ItemsSource="{Binding TariffItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid BackgroundColor="White">
                            <Grid.Resources>
                                <Style TargetType="Label">
                                    <Setter Property="TextColor" Value="Black" />
                                </Style>
                            </Grid.Resources>
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>


                            <Border Grid.Row="1" Grid.Column="0" Margin="0" Padding="5" StrokeThickness="0.1" Stroke="Black" >
                                <Label Text="{Binding oznaka}"  HorizontalOptions="Start"  />
                            </Border>

                            <Border  Grid.Row="1" Grid.Column="1" Margin="0" Padding="5" StrokeThickness="0.1" Stroke="Black"  >
                                <Label Text="{Binding bodovi}" HorizontalOptions="Center"  />
                            </Border>

                            <Border Grid.Row="1" Grid.Column="2"  Margin="0" Padding="5" StrokeThickness="0.1" Stroke="Black"  >
                                <Label Text="{Binding concatenated_name}" WidthRequest="2000" HorizontalOptions="Start"  />
                             </Border>
                            
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
    </ScrollView>

</ContentPage> 





