<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eOdvjetnik.Views.Spisi"
             xmlns:viewmodel="clr-namespace:eOdvjetnik.ViewModel"
             BackgroundColor="White"
             
             
             Title="Spisi">

    <ContentPage.BindingContext>
        <viewmodel:SpisiViewModel/>
    </ContentPage.BindingContext>
    <!--<ContentPage.ToolbarItems  >
        <ToolbarItem Text="Dodaj" Order="Primary" Command="{Binding OnDodajClick}" />
        <ToolbarItem Text="Bezveze provjera" Order="Primary" Priority="1"/>
        <ToolbarItem Text="Drugi item" Order="Primary"/>
    </ContentPage.ToolbarItems>-->

    <!--<Shell.TitleView>
        <FlexLayout>
            <Button Text="Dodaj" Command="{Binding OnDodajClick}"></Button>
        </FlexLayout>
    </Shell.TitleView>-->

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout>
                
                <Grid Margin="0,0,0,10" Padding="5" BackgroundColor="White" Background="LightGray">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Text="Dodaj" Command="{Binding OnDodajClick}" BorderColor="LightBlue" HorizontalOptions="Fill"/>
                    <Button Grid.Column="1" Text="Obriši" BorderColor="LightBlue" HorizontalOptions="Fill"/>
                    <Button Grid.Column="1" Text="Poništi" BorderColor="LightBlue" HorizontalOptions="EndAndExpand" Command="{Binding OnResetClick}"/>
                    
                    <SearchBar Grid.Column="2" Placeholder="Pretraži" 
                               HorizontalOptions="EndAndExpand" 
                               BackgroundColor="LightGray"
                               SearchCommand="{Binding SearchCommand}"
                               Text="{Binding SearchText}"
                               
                               />

                </Grid>

                <Grid Margin="5" Padding="5" BackgroundColor="White">
                    <Grid.Resources>
                        <Style TargetType="Label">
                            <Setter Property="TextColor" Value="Black" />
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" MaximumWidthRequest="150" Text="ID" />
                    <Label Grid.Row="0" Grid.Column="1" MaximumWidthRequest="150" Text="Broj spisa" />
                    <Label Grid.Row="0" Grid.Column="2" MaximumWidthRequest="150" Text="Created" />

                </Grid>


                <ListView ItemsSource="{Binding FileItems}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Margin="5" Padding="5" BackgroundColor="White">
                                    <Grid.Resources>
                                        <Style TargetType="Label">
                                            <Setter Property="TextColor" Value="Black" />
                                        </Style>

                                    </Grid.Resources>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />

                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Row="1" Grid.Column="0" MaximumWidthRequest="150" Text="{Binding Id}" />
                                    <Label Grid.Row="1" Grid.Column="1" MaximumWidthRequest="150" Text="{Binding BrojSpisa}" />
                                    <Label Grid.Row="1" Grid.Column="2" MaximumWidthRequest="150" Text="{Binding Created}" />


                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>