<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eOdvjetnik.Views.CustomPopup">
    <StackLayout>
        <Label Text="Appointment Details" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,20" />
        <Label Text="{Binding AppointmentSubject}" FontSize="Medium" Margin="0,0,0,10" />
        <Label Text="{Binding AppointmentStartTime, StringFormat='{0:t}'}" FontSize="Small" />
        <Label Text="{Binding AppointmentEndTime, StringFormat='{0:t}'}" FontSize="Small" Margin="10,0,0,0" />
    </StackLayout>
     
</ContentView>
