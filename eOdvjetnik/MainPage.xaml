<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="eOdvjetnik.MainPage"
             xmlns:sfPopup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
             xmlns:local ="clr-namespace:eOdvjetnik.ViewModel"
             >

    <!--Crasha se CSS kad implementiraš ->
    font-size: 15px;
                    left: 1;
                width: 99%;
padding-right: 30;
    border-radius: 5;
    padding: 5 5;
    min-height: 65;
    height: 100%;
    -->
    <ContentPage.Resources>
        <StyleSheet>
            <![CDATA[
            ^Button {
                text-align: left;
                color: black;
                position: absolute;
                background: #5dc1e4;
                font-size: 15;
                top: 0;
  
            }
            ]]>
        </StyleSheet>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <local:MainPageViewModel/>
    </ContentPage.BindingContext>

    
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30"  />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        <Image Opacity="0.5" HorizontalOptions="Center" Grid.ColumnSpan="3" Grid.Row="0" Source="main_pozadina.jpg"  
               Aspect="AspectFill" IsVisible="{OnPlatform Android=False, iOS=False, WinUI=True, MacCatalyst=False}"  />

        <VerticalStackLayout   Grid.ColumnSpan="5"  IsVisible="{Binding ActivationVisible}" >

            <Image Source="text_only.png" HeightRequest="50" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,100,0,30" />

            <Label 
                        Text="AKTIVACIJSKI KOD" 
                        VerticalOptions="Center" 
                        HorizontalOptions="Center"
                        FontSize="Large"
                        Margin="0,0,0,20"
                        TextColor="Black"
                    />

            <Label 
                        Text="{Binding Activation_code}"
                        VerticalOptions="Center" 
                        HorizontalOptions="Center"
                        FontSize="Large"
                        Margin="0,0,0,120"
                        TextColor="Black"
                    />


            <Label  
                        Text="Za aktivaciju aplikacije obratite se voditelju vašeg odvjetničkog društva."
                        HorizontalOptions="Center"
                        FontSize="Small"
                        Margin="10,0,0,10"
                        LineBreakMode="WordWrap"
                        TextColor="Black"
                
                />



            <Label 
                        Text="Kontakt informacije: tel: 0800 123 224, email: info@eodvjednik.hr"
                        HorizontalOptions="Center"
                        FontSize="Small"
                        Margin="10,0,0,10"
                        LineBreakMode="WordWrap"
                        TextColor="Black"        
                />


        </VerticalStackLayout>

        <Label BackgroundColor="#dbdbdb" Grid.Row="1" Grid.ColumnSpan="5" />
        <Image Source="text_only.png" Margin="5" HeightRequest="20" HorizontalOptions="Start" Grid.Row="1"  />
        <Label TextColor="Black" Text="{Binding datetime}"  FontSize="Small" Margin="5" HorizontalOptions="End" Grid.Row="1" Grid.ColumnSpan="5"/>
        <Label TextColor="Black" Text="{Binding Version}" FontSize="Small" Margin="5" HorizontalOptions="Start" Grid.Row="1" Grid.Column="1" 
               IsVisible="{OnPlatform Android=False, iOS=False}" />
        <Label TextColor="Black" Text="{Binding licence_type, StringFormat='Licenca: {0}'}" FontSize="Small" Margin="5" HorizontalOptions="Start" 
               Grid.Row="1" Grid.Column="3" IsVisible="{OnPlatform Android=False, iOS=False}" />




    </Grid>




</ContentPage>

