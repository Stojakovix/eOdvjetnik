<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:scheduler="clr-namespace:Syncfusion.Maui.Scheduler;assembly=Syncfusion.Maui.Scheduler"
             x:Class="eOdvjetnik.Kalendar"
             Title="Kalendar"
             BackgroundColor="White"
             xmlns:local="clr-namespace:sample"
    >



    <scheduler:SfScheduler View="TimelineMonth"
                           AllowedViews="Day,Week,WorkWeek, Month, TimelineDay, TimelineWeek,TimelineWorkWeek, TimelineMonth, Agenda" 
                           TodayHighlightBrush="Blue"
                           AppointmentsSource="{Binding SchedulerEvents}">

        <scheduler:SfScheduler.BindingContext>
            <local:ControlViewModel></local:ControlViewModel>
        </scheduler:SfScheduler.BindingContext>
        
    </scheduler:SfScheduler>






</ContentPage>